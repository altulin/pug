extends ../templates/_main.pug
include ../helpers/mixins.pug

block content

  section.create
    .create__inner.container

      ul.create__breadcrumbs.breadcrumbs
        li.breadcrumbs__item
          a.breadcrumbs__link.hover-opacity(href="index.html") Главная
        li.breadcrumbs__item
          a.breadcrumbs__link.hover-opacity(href="index.html") Тип иска
        li.breadcrumbs__item
          a.breadcrumbs__link.breadcrumbs__link--current Тарифный план

      h1.create__title.title.size-4 Создание заявления

      ul.create__path.path

        li.path__item
          .path__head
            p.path__name Тип иска:
            a.path__link.hover-opacity(href="index.html") Изменить
          p.path__text  Заявление в суд о&nbsp;расторжении брака

        li.path__item.path__item--current
          .path__head
            p.path__name Тарифный план:
            a.path__link
          p.path__text  Выберите тарифный план

        li.path__item
          .path__head
            p.path__name Данные заявления
            a.path__link
          p.path__text  Внимательно заполните все необходимые поля для формирования заявления

        li.path__item.path__item--end
          figure.path__img-wrap
            +img(`hands`, `png`, ``, `card__img`, `71`)
          p.path__text  Получите завяление согласно выбранному тарифному плану

  section.choose
    .choose__inner.container
      h1.choose__title.size-3 Выберите тарифный план

      ul.choose__list.plan
        li.choose__item
          h3.plan__title <mark>Мы</mark> готовим и помогаем вам подать заявление в суд

          ul.plan__list
            li.plan__item
              figure.plan__img-wrap
                +img(`isk`, `png`, ``, `plan__img`, `40`)
              p.plan__text Готовое к подаче в суд заявление
            li.plan__item
              figure.plan__img-wrap
                +img(`isk`, `png`, ``, `plan__img`, `40`)
              p.plan__text Пошаговый план действий
            li.plan__item
              figure.plan__img-wrap
                +img(`proc`, `png`, ``, `plan__img`, `40`)
              p.plan__text Сопровождение всего процесса юристом
            li.plan__item
              figure.plan__img-wrap
                +img(`lich`, `png`, ``, `plan__img`, `40`)
              p.plan__text Личная консультация профильного юриста

          .plan__price
            p.plan__sum.size-1 5 000 ₽
            a.plan__link(href="razvod-step-3.html") Выбрать тариф


        li.choose__item
          h3.plan__title <mark>Мы</mark> готовим и <mark>Вы</mark> подаете заявление в суд

          ul.plan__list
            li.plan__item
              figure.plan__img-wrap
                +img(`isk`, `png`, ``, `plan__img`, `40`)
              p.plan__text Готовое к подаче в суд заявление
            li.plan__item
              figure.plan__img-wrap
                +img(`isk`, `png`, ``, `plan__img`, `40`)
              p.plan__text Пошаговый план действий

          .plan__price
            p.plan__sum.size-1 999 ₽
            a.plan__link(href="razvod-step-3-light.html") Выбрать тариф


        li.choose__item
          h3.plan__title <mark>Вы</mark> готовите и подаете заявление в суд самостоятельно

          ul.plan__list
            li.plan__item
              figure.plan__img-wrap
                +img(`isk`, `png`, ``, `plan__img`, `40`)
              p.plan__text Шаблон заявления (2021 г. редакции)

          .plan__price
            p.plan__sum.size-1 0 ₽
            a.plan__link(href="razvod-step-5.html") Выбрать тариф
